extends ../layout/common

block content
    h3.mb-4 Create User

    if errors
        each err in errors
            .alert.alert-danger= err

    form(action="/users/create" method="POST" enctype="multipart/form-data")
        .form-group
            label(for="name") Name
            input#name.form-control(type="text" name="name" value= values ? values.name : "") 

        .form-group
            label(for="phone") Phone
            input#phone.form-control(type="text" name="phone" value= values ? values.phone : "") 

        .form-group
            label(for="avatar") Avatar
            input#avatar.form-control-file(name="avatar" type="file")

        button.btn.btn-primary Create