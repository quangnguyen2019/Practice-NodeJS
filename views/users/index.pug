extends ../layout/common

block content
    h2 
        span.mr-3 Users
        a.btn.btn-primary.mb-2(href="/users/create") Create User

    .d-flex.justify-content-end
        form(action="/users/search", method="GET", class="d-flex")
            if query
                input(type="text", class="form-control", name="q", value=query)
            else 
                input(type="text", class="form-control", name="q")

            button(class="btn btn-primary ml-2") Search

    table.table.table-hover
        thead
            tr
                th Avatar
                th Name
                th Phone
                th Actions

        tbody
            each user in users
                tr
                    td
                        img(src= user.avatar, style="width: 64")
                    td= user.name
                    td= user.phone
                    td 
                        a.btn.btn-light(href='/users/' + user.id) View